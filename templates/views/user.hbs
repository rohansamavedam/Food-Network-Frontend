<h1 id="user" style="text-align: center; color: white"></h1>

<hr>

<div class="container">
    <div style="text-align:center; margin-bottom: 15px;">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#recipemodal">
        Create Recipe
        </button>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deletemodal">
        Delete Recipe
        </button>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="recipemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Recipe Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="taskbox">
        <h3>name:</h3>
        <input type="text" id="name">
        <h3>description:</h3>
        <input type="text" id="description">
        <h3>link:</h3>
        <input type="text" id="link">
        <h3>image link:</h3>
        <input type="text" id="imageLink">
        <h3>cusine:</h3>
        <input type="text" id="cusine">
      </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="create">Add Recipe</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="deletemodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Enter Recipe Name To Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
            <input type="text" id="delVal">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="del">Delete Recipe</button>
      </div>
    </div>
  </div>
</div>

